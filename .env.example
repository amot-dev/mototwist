# Application Options
MOTOTWIST_BASE_URL="http://localhost:8000"  # Change this to whatever URL your Mototwist instance will be hosted at
MOTOTWIST_SECRET_KEY="changethis"  # Change this!
OSM_URL="https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"  # Recommended to change this
OSRM_URL="https://router.project-osrm.org"  # Recommended to change this
TWIST_SIMPLIFICATION_TOLERANCE_M="30m"  # Set to 0m to save all Twist route points (ex. "0", "10m", "30.5 m")
DEFAULT_TWISTS_LOADED=20  # Number of Twists loaded at a time
MAX_TWISTS_LOADED=100  # Max number of Twists loaded at a time that can be set by a user

# User Options
MOTOTWIST_ADMIN_EMAIL="admin@admin.com"  # Change this!
MOTOTWIST_ADMIN_PASSWORD="password"
ALLOW_USER_REGISTRATION=False  # Enable if you want anyone with access to your instance to be able to create an account

# Database Options
POSTGRES_HOST="db"  # Must match the name of the database service in docker-compose.yml
POSTGRES_PORT=5432
POSTGRES_DB="mototwist"
POSTGRES_USER="mototwist"
POSTGRES_PASSWORD="changethis"  # Change this!